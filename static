  <!-- ====== SCRIPT ====== -->
  <script>
    const form = document.getElementById('geneForm');
    const resultDiv = document.getElementById('result');
    const planDetails = document.getElementById('planDetails');
    const downloadBtn = document.getElementById('downloadBtn');
    let lastData = {};

    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      resultDiv.style.display = 'none';
      planDetails.innerHTML = 'Generating plan... ‚è≥';

      lastData = {
        genotype: document.getElementById('genotype').value,
        age: document.getElementById('age').value,
        fitness_level: document.getElementById('fitness').value
      };

      try {
        const res = await fetch('/api/generate_plan', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(lastData)
        });
        const plan = await res.json();
        resultDiv.style.display = 'block';
        planDetails.innerHTML = `
          <p><b>Genotype:</b> ${plan.genotype_label}</p>
          <p><b>Sessions per week:</b> ${plan.summary.sessions_per_week}</p>
          <p><b>Session length:</b> ${plan.summary.session_length_min} min</p>
          <p><b>Intensity:</b> ${plan.summary.intensity}</p>
          <p><b>Generated at:</b> ${new Date(plan.generated_at).toLocaleString()}</p>
        `;
        downloadBtn.style.display = 'inline-block';
      } catch (err) {
        resultDiv.style.display = 'block';
        planDetails.innerHTML = `<p style="color:red;">‚ùå Failed to generate plan. Check API or network connection.</p>`;
        downloadBtn.style.display = 'none';
      }
    });

    downloadBtn.addEventListener('click', async () => {
      try {
        const res = await fetch('/api/download_plan_pdf', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(lastData)
        });
        const blob = await res.blob();
        const url = window.URL.createObjectURL(blob);
        const a = document.createElement('a');
        a.href = url;
        a.download = 'EXECOGIM_Exercise_Plan.pdf';
        document.body.appendChild(a);
        a.click();
        a.remove();
      } catch (err) {
        alert('‚ùå Failed to download PDF.');
      }
    });
  </script>

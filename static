<body>
  <header>
    <h1>EXECOGIM</h1>
    <p>Malaysia‚Äôs First Gene-Guided Exercise Prescription System</p>
  </header>

  <main>
    <h2>Personalized Exercise Plan Generator üß¨</h2>
    <form id="geneForm">
      <label>BDNF Genotype:</label>
      <select id="genotype" required>
        <option value="Val/Val">Val/Val</option>
        <option value="Met/Met">Met/Met</option>
        <option value="Val/Met">Val/Met</option>
      </select>

      <label>Age:</label>
      <input type="number" id="age" value="40" min="18" required />

      <label>Fitness Level:</label>
      <select id="fitness">
        <option value="beginner">Beginner</option>
        <option value="moderate" selected>Moderate</option>
        <option value="advanced">Advanced</option>
      </select>

      <button type="submit">Generate Plan</button>
    </form>

    <div id="result"></div>
  </main>

  <script>
    const form = document.getElementById('geneForm');
    const resultDiv = document.getElementById('result');

    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      resultDiv.style.display = 'none';
      resultDiv.innerHTML = 'Generating plan... ‚è≥';

      const data = {
        genotype: document.getElementById('genotype').value,
        age: document.getElementById('age').value,
        fitness_level: document.getElementById('fitness').value
      };

      try {
        const res = await fetch('/api/generate_plan', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(data)
        });
        const plan = await res.json();

        resultDiv.style.display = 'block';
        resultDiv.innerHTML = `
          <h3>‚úÖ Personalized Plan Generated</h3>
          <p><b>Genotype:</b> ${plan.genotype_label}</p>
          <p><b>Sessions per week:</b> ${plan.summary.sessions_per_week}</p>
          <p><b>Session length:</b> ${plan.summary.session_length_min} min</p>
          <p><b>Intensity:</b> ${plan.summary.intensity}</p>
          <p><b>Generated at:</b> ${new Date(plan.generated_at).toLocaleString()}</p>
        `;
      } catch (err) {
        resultDiv.style.display = 'block';
        resultDiv.innerHTML = `<p style="color:red;">‚ùå Failed to generate plan. Check API or network connection.</p>`;
      }
    });
  </script>
</body>
